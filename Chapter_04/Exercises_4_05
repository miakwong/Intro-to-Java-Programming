/*(Geometry: area of a regular polygon) A regular polygon is an n-sided polygon
in which all sides are of the same length and all angles have the same degree (i.e.,
the polygon is both equilateral and equiangular).*/

import java.util.Scanner;

public class P0917to19_0927{

	public static void main(String[] args) {
	    Scanner in = new Scanner(System.in);
		
		//prompt the user to enter the number of sides
		System.out.print("Enter the number of sides: ");
		int number = in.nextInt();
		
		//prompt the user to enter the side of a hexagon
		System.out.print("Enter the side: ");
		double side = in.nextDouble();
		
		//calculate the area
		double area = ( number * Math.pow(side, 2) ) / (4 * Math.tan( Math.PI / number ));
		
		System.out.println("The area of the polygon " + area);
	}
}	
		
	
	
